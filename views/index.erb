<h2>Latest posts:</h2>
<br />

<% @posts.each do |post| %>
  <p>
    <%= post.content %>
    <br />
    <br />
    <span style="font-size: 75%; color: #999"> Added <%= post.author %> at <%= post.created_date %></span>
    <br />
    <br />
    <a href="/details/<%= post.id %>">Comments</a>
  </p>
  <br />
<% end %>